---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Lead Time GTM - Right Time, Relevant Conversations",
  description = "Lead Time GTM helps your team reach out when something real has changed inside an account.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || "https://leadtimegtm.com");
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />

    <!-- Google Fonts - Inter with all weights -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;900&display=swap" rel="stylesheet">

    <!-- Force bold headline -->
    <style>
      h1 {
        font-family: 'Inter', sans-serif !important;
        font-weight: 900 !important;
      }
    </style>
  </head>
  <body class="bg-white text-black antialiased selection:bg-black selection:text-white">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot />

    <!-- Scroll Animation Observer -->
    <script>
      (function() {
        const observerOptions = {
          root: null,
          rootMargin: '-5% 0px -5% 0px',
          threshold: [0, 0.05, 0.1, 0.15]
        };

        const observer = new IntersectionObserver((entries) => {
          requestAnimationFrame(() => {
            entries.forEach(entry => {
              if (entry.isIntersecting && entry.intersectionRatio > 0.05) {
                entry.target.classList.add('visible');
              } else {
                entry.target.classList.remove('visible');
              }
            });
          });
        }, observerOptions);

        // Observe all sections on load
        document.addEventListener('DOMContentLoaded', () => {
          document.querySelectorAll('[data-section]').forEach(section => {
            observer.observe(section);
          });
        });
      })();
    </script>
  </body>
</html>
