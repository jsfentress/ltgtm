---
// Hero Component - Brutalist Design
// Main headline with checkmark list and dual CTAs

interface Props {
  title: string;
  subtitle: string;
  checkmarks?: Array<{ icon: string; text: string }>;
}

const { title, subtitle, checkmarks = [] } = Astro.props;
---

<header class="relative pb-20 lg:pb-32 px-6 border-b border-black" style="padding-top: 8.73rem;" data-section>
  <div class="max-w-4xl mx-auto">
    <h1 class="text-5xl md:text-7xl font-black tracking-tight leading-[1.1]" style="font-weight: 900 !important; -webkit-font-smoothing: antialiased; font-synthesis: none; margin-bottom: 1.7rem;" set:html={title}></h1>

    <p class="text-xl md:text-2xl font-light leading-relaxed text-gray-800 max-w-2xl" style="line-height: 1.6; margin-bottom: 1.7rem;">
      {subtitle}
    </p>

    {checkmarks && checkmarks.length > 0 && (
      <div class="grid gap-8 mb-16 border-l-4 border-black pl-6">
        {checkmarks.map((item) => (
          <div class="flex items-start gap-4">
            <svg class="w-6 h-6 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              {item.icon === 'check' && (
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              )}
              {item.icon === 'clock' && (
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              )}
              {item.icon === 'chat' && (
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
              )}
            </svg>
            <p class="text-lg leading-relaxed" set:html={item.text}></p>
          </div>
        ))}
      </div>
    )}

    <div>
      <a href="#contact" class="inline-block bg-black text-white text-lg font-bold px-8 py-4 hover:bg-white hover:text-black border-2 border-black transition-all duration-300">
        Request a Diagnostic
      </a>
    </div>
  </div>
</header>
