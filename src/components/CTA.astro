---
interface Props {
  text: string;
  href?: string;
  variant?: 'primary' | 'secondary';
  type?: 'button' | 'link';
}

const { 
  text, 
  href = '#', 
  variant = 'primary',
  type = 'link' 
} = Astro.props;

const baseClasses = 'inline-block font-semibold py-4 px-8 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2';
const variantClasses = variant === 'primary' 
  ? 'bg-blue-600 hover:bg-blue-700 text-white focus:ring-blue-500' 
  : 'bg-gray-100 hover:bg-gray-200 text-gray-900 focus:ring-gray-500';
---

{type === 'link' ? (
  <a 
    href={href}
    class={`${baseClasses} ${variantClasses}`}
  >
    {text}
  </a>
) : (
  <button 
    type="button"
    class={`${baseClasses} ${variantClasses}`}
  >
    {text}
  </button>
)}

