---
interface Props {
  text: string;
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'link';
}

const {
  text,
  href = '#',
  variant = 'primary',
  size = 'md',
  type = 'link'
} = Astro.props;

const classes = `btn btn-${variant} btn-${size}`;
---

{type === 'link' ? (
  <a
    href={href}
    class={classes}
  >
    <span>{text}</span>
  </a>
) : (
  <button
    type="button"
    class={classes}
  >
    <span>{text}</span>
  </button>
)}

