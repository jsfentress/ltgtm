---
// Alternative Hero Component - Animated Gradient Design
// Built from scratch for A/B testing - zero dependencies

interface Props {
  title: string;
  subtitle?: string;
  ctaText: string;
  ctaHref: string;
}

const { title, subtitle, ctaText, ctaHref } = Astro.props;
---

<section class="hero-alt visible" id="hero-alternative" data-section>
  <!-- Animated gradient layers -->
  <div class="gradient-bg">
    <div class="gradient-layer gradient-layer-1"></div>
    <div class="gradient-layer gradient-layer-2"></div>
    <div class="gradient-layer gradient-layer-3"></div>
  </div>

  <!-- Floating geometric shapes -->
  <div class="floating-shapes">
    <div class="shape shape-circle shape-1"></div>
    <div class="shape shape-rect shape-2"></div>
    <div class="shape shape-circle shape-3"></div>
    <div class="shape shape-rect shape-4"></div>
  </div>

  <!-- Content -->
  <div class="hero-alt-content">
    <div class="hero-alt-wrapper">
      <h1 class="hero-alt-title hero-animate-1" set:html={title}></h1>

      {subtitle && (
        <p class="hero-alt-subtitle hero-animate-2" set:html={subtitle}></p>
      )}

      <div class="hero-alt-body hero-animate-3">
        <slot />
      </div>

      <div class="hero-alt-cta hero-animate-4">
        <a href={ctaHref} class="hero-alt-button">
          <span>{ctaText}</span>
          <svg class="hero-alt-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Transition fade to next section -->
  <div class="hero-transition-fade"></div>
</section>

<style is:global>
  @import '../styles/hero-alternative.css';
</style>
