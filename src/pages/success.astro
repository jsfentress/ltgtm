---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Thank You - Lead Time GTM"
  description="Thanks for reaching out. We'll be in touch soon."
>
  <Header />

  <main id="main-content">
    <div class="min-h-screen flex items-center justify-center px-6 py-24">
      <div class="max-w-2xl w-full text-center">
        <div class="border-4 border-black bg-white p-12 md:p-16 brutal-shadow">
          <div class="mb-8">
            <svg class="w-20 h-20 mx-auto text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>

          <h1 class="text-4xl md:text-5xl font-black mb-6">Request Received</h1>

          <p class="text-xl mb-8 text-gray-700 leading-relaxed">
            Thanks for reaching out. We'll review your information and get back to you within 24 hours to discuss your market and timing opportunities.
          </p>

          <a
            href="/"
            class="inline-block bg-black text-white font-bold px-8 py-4 text-lg hover:bg-white hover:text-black border-2 border-black transition-all duration-300"
          >
            Return to Home
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
